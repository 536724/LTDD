<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="15dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_ticket"
        android:layout_width="180dp"
        android:layout_height="140dp"
        android:background="@drawable/border_radius_15"
        android:src="@drawable/img_chitiet_xebuyt" />
    <TextView
        android:id="@+id/name_ticktet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="Ve cap treo Ba Na hill-\nDa Nang"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginVertical="6dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/icon_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_star"/>
        <TextView
            android:id="@+id/rate_ticket"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.7"
            android:textColor="@color/orange"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/count_ticket"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(10,000)"
            android:textColor="@color/black"
            android:textSize="16sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/price_ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Tu d 650,000"/>
</LinearLayout>