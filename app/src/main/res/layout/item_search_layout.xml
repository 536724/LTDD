<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_search"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/img_chitiet_xebuyt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="title"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/iv_search"
        app:layout_constraintTop_toTopOf="@+id/iv_search" />

    <TextView
        android:id="@+id/tv_address_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="TP. Ho Chi Minh"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_search"
        app:layout_constraintStart_toEndOf="@+id/iv_search" />

    <TextView
        android:id="@+id/price_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tu d 1,125,000"
        android:textColor="@color/orange"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_address_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_address_search" />
</androidx.constraintlayout.widget.ConstraintLayout>